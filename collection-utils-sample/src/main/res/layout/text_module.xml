<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFF0000"
    android:orientation="vertical"
    android:padding="16dip">

    <com.guardanis.fontutils.TextView
        android:id="@+id/text_module_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is an example module with some text"
        android:textColor="@color/base__text_white"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <com.guardanis.fontutils.TextView
        android:id="@+id/text_module_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is a an example detail element within the text"
        android:textColor="@color/base__text_white"
        android:textSize="14sp" />

</LinearLayout>