<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="32dip"
    android:paddingLeft="16dip"
    android:paddingRight="16dip"
    android:paddingTop="32dip">

    <com.guardanis.fontutils.TextView
        android:id="@+id/text_module_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is an example module with some text"
        android:textColor="@color/base__text_dark_0"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <com.guardanis.fontutils.TextView
        android:id="@+id/text_module_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is a an example detail element within the text"
        android:textColor="@color/base__text_dark_2"
        android:textSize="14sp" />

</LinearLayout>